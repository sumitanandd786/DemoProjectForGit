<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white"
                android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/itemLay" android:focusable="true" android:focusableInTouchMode="false"
                    android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/remove">
        <ImageView android:id="@+id/img" android:background="@color/stroke" android:layout_width="wrap_content"
                   android:layout_height="wrap_content" android:layout_margin="@dimen/defaultMargin"
                   android:src="@drawable/ic_image_grey600_36dp" android:scaleType="center"/>
        <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/title"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/defaultMargin" android:text="Sample"
                  android:layout_toRightOf="@+id/img"/>
        <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/price"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/defaultMargin" android:text="Rs. 7000"
                  android:layout_below="@+id/title"
                  android:layout_alignLeft="@+id/title"/>
    </RelativeLayout>
    <ImageView android:id="@+id/remove" android:focusable="true" android:focusableInTouchMode="false"
               android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_margin="@dimen/defaultMargin" android:src="@drawable/ic_close_grey600_24dp"
               android:layout_alignParentRight="true"/>
</RelativeLayout>
