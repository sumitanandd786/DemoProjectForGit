<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/border"
                android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent"
                android:layout_above="@+id/bottomLay">
        <LinearLayout android:orientation="vertical" android:background="@color/white"
                      android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/account_name" android:textColor="@color/black" android:id="@+id/name"
                      android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/defaultMargin" android:layout_marginTop="@dimen/defaultMargin"
                      android:layout_marginRight="@dimen/defaultMargin" android:text="Preeth"/>
            <TextView android:textSize="@dimen/account_content" android:textColor="@color/black"
                      android:id="@+id/mobile" android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/defaultMargin" android:layout_marginTop="@dimen/halfMargin"
                      android:layout_marginRight="@dimen/defaultMargin" android:text="9995188504"/>
            <TextView android:textSize="@dimen/account_content" android:textColor="@color/black" android:id="@+id/email"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/defaultMargin" android:layout_marginTop="@dimen/halfMargin"
                      android:layout_marginRight="@dimen/defaultMargin"
                      android:layout_marginBottom="@dimen/defaultMargin" android:text="preeth@gmail.com"/>
            <include layout="@layout/border"/>
            <RelativeLayout android:id="@+id/myOrdersLay" android:focusable="true" android:focusableInTouchMode="false"
                            android:clickable="true" android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/account_title" android:textColor="@color/black"
                          android:id="@+id/myOrdersText" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_margin="@dimen/defaultMargin"
                          android:text="My Orders"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:layout_marginRight="@dimen/defaultMargin"
                           android:src="@drawable/ic_chevron_right_grey600_24dp" android:layout_alignParentRight="true"
                           android:layout_centerVertical="true"/>
            </RelativeLayout>
            <include layout="@layout/border"/>
            <RelativeLayout android:id="@+id/logoutLay" android:focusable="true" android:focusableInTouchMode="false"
                            android:clickable="true" android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/account_title" android:textColor="@color/black"
                          android:id="@+id/logout" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_margin="@dimen/defaultMargin"
                          android:text="Logout" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
