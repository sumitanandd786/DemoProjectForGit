<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white"
                android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="@dimen/CategoryTitleSize" android:textStyle="bold" android:textColor="@color/black"
              android:id="@+id/category" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/defaultMargin" android:text="Category"
              android:layout_centerHorizontal="true"/>
    <com.demoproject.utils.ExpandableHeightGridView
            android:id="@+id/subcategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defaultMargin"
            android:numColumns="3"
            android:layout_below="@+id/category"/>


</RelativeLayout>
