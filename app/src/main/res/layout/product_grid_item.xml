<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/itemLay"
                android:background="@color/white" android:focusable="true" android:focusableInTouchMode="false"
                android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/defaultMargin">
        <ImageView android:id="@+id/image" android:background="@color/stroke" android:layout_width="match_parent"
                   android:layout_height="wrap_content" android:src="@drawable/ic_image_grey600_36dp"
                   android:scaleType="center"/>
        <ImageView android:id="@+id/heart" android:focusable="true" android:focusableInTouchMode="false"
                   android:clickable="true" android:layout_width="wrap_content"
                   android:layout_height="wrap_content" android:src="@drawable/ic_heart_grey600_24dp"
                   android:scaleType="center" android:layout_alignParentRight="true"/>
        <TextView android:textSize="@dimen/ProductTitle" android:textStyle="bold" android:textColor="@color/black"
                  android:id="@+id/name" android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/defaultMargin" android:layout_marginTop="@dimen/defaultMargin"
                  android:layout_marginRight="@dimen/defaultMargin" android:text="Hai" android:maxLines="1"
                  android:singleLine="true" android:layout_below="@+id/image"/>
        <TextView android:textSize="@dimen/ProductPrice" android:textColor="@color/black" android:id="@+id/price"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/defaultMargin" android:layout_marginTop="2dp"
                  android:layout_marginRight="@dimen/defaultMargin" android:layout_marginBottom="@dimen/defaultMargin"
                  android:text="Rs.72,000" android:maxLines="1" android:singleLine="true"
                  android:layout_below="@+id/name"/>
    </RelativeLayout>
</RelativeLayout>
