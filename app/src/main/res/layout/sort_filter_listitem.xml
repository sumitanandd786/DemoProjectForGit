<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/itemLay"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="60dp">
    <TextView android:id="@+id/name" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/defaultMargin" android:text="sample"
              android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/tick" android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_marginRight="@dimen/defaultMargin" android:src="@drawable/ic_check_white_24dp"
               android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/arrow" android:visibility="gone" android:layout_width="wrap_content"
               android:layout_height="wrap_content" android:layout_marginRight="@dimen/defaultMargin"
               android:src="@drawable/ic_heart_grey600_24dp" android:layout_alignParentRight="true"
               android:layout_centerVertical="true"/>
    <TextView android:textColor="@color/white"
              android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
              android:id="@+id/count" android:background="@drawable/blue_circle" android:padding="5dp"
              android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginRight="@dimen/defaultMargin" android:text="13" android:layout_toLeftOf="@+id/arrow"
              android:layout_centerVertical="true"/>
</RelativeLayout>
