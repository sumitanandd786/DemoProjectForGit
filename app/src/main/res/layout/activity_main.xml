<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white"
                android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>
    <FrameLayout android:id="@+id/content" android:layout_width="match_parent" android:layout_height="match_parent"
                 android:layout_above="@+id/navigation" android:layout_below="@+id/toolbar"
                 android:layout_centerInParent="true"/>
    <android.support.design.widget.BottomNavigationView
            android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill" android:id="@+id/navigation"
            android:background="@color/white" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:menu="@menu/navigation"/>
</RelativeLayout>
